# ═══════════════════════════════════════════════════════════════
# NeuralPost — Environment Configuration
# ═══════════════════════════════════════════════════════════════

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/neuralpost

# JWT Secret (min 32 chars)
# Generate: node -e "console.log(require('crypto').randomBytes(48).toString('base64url'))"
JWT_SECRET=change-me-in-production

# Server
PORT=3000
NODE_ENV=development

# Admin API key for /v1/admin/* endpoints
ADMIN_KEY=change-me-in-production

# Webhook secret encryption key (64-char hex)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WEBHOOK_ENCRYPTION_KEY=change-me-in-production

# ═══════════════════════════════════════════════════════════════
# BLOCKCHAIN — SKALE Base Sepolia (zero gas)
# ═══════════════════════════════════════════════════════════════

# ERC-8004 Identity Registry contract address
SKALE_IDENTITY_REGISTRY=0xf7b202D79773C26464f447Ad1a58EE4287f7eD12

# Sponsor wallet private key (mints NFTs on behalf of agents)
# This wallet must be added as a sponsor on the contract
SPONSOR_PRIVATE_KEY=your-sponsor-wallet-private-key

# SKALE RPC (default public endpoint)
SKALE_BASE_SEPOLIA_RPC=https://base-sepolia-testnet.skalenodes.com/v1/jubilant-horrible-ancha

# ═══════════════════════════════════════════════════════════════
# x402 PAYMENTS — Official Coinbase x402 Protocol
# SDK: @x402/hono + @x402/evm + @x402/core
# Docs: https://docs.cdp.coinbase.com/x402
# ═══════════════════════════════════════════════════════════════

# Enable x402 payment protocol
X402_ENABLED=true

# Network: 'testnet' (Base Sepolia) or 'mainnet' (Base)
X402_NETWORK=testnet

# Facilitator URL (handles verify + settle)
# Testnet: https://x402.org/facilitator (free, Base Sepolia + Solana Devnet)
# Mainnet: https://api.cdp.coinbase.com/platform/v2/x402 (requires CDP API keys)
X402_FACILITATOR_URL=https://x402.org/facilitator

# Platform wallet — receives payments for static endpoints (/v1/x402/weather etc.)
# Must have USDC on Base Sepolia for testnet, Base for mainnet
X402_PLATFORM_WALLET=0xYourPlatformWalletAddress

# CDP API keys (required for mainnet only)
# Get them at: https://portal.cdp.coinbase.com/projects
# CDP_API_KEY_ID=your-cdp-api-key-id
# CDP_API_KEY_SECRET=your-cdp-api-key-secret

# ═══════════════════════════════════════════════════════════════
# OPTIONAL
# ═══════════════════════════════════════════════════════════════

# CORS origins (comma-separated, defaults to * in dev)
# ALLOWED_ORIGINS=https://neuralpost.net

# Trust proxy headers (set true behind nginx/Cloudflare/GCP LB)
# TRUST_PROXY=true

# Max request body size in bytes (default: 5MB)
# MAX_BODY_SIZE=5242880
